<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.VoteController">
    <children>
        <TableView fx:id="votesTable" maxHeight="-Infinity" maxWidth="-Infinity"
                   minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0"
                   prefWidth="600.0">
            <columns>
                <TableColumn prefWidth="214.39998817443848" text="Title"/>
                <TableColumn minWidth="0.0" prefWidth="99.20001220703125"
                             text="Number of votes"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER" prefHeight="294.0" prefWidth="547.0"
              spacing="100.0">
            <children>
                <VBox alignment="CENTER" prefHeight="206.0" prefWidth="325.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="100.0"
                              prefWidth="200.0" spacing="15.0">
                            <children>
                                <Label text="Title of game"/>
                                <TextField fx:id="titleField"
                                           maxHeight="-Infinity"
                                           maxWidth="-Infinity"
                                           prefHeight="30.0"/>
                            </children>
                        </HBox>
                        <Button fx:id="voteButton" alignment="CENTER"
                                maxWidth="1.7976931348623157E308"
                                mnemonicParsing="false" onAction="#handleAction"
                                text="Vote"/>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
