<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox alignment="CENTER" prefHeight="350.0" prefWidth="500.0"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" prefHeight="206.0" prefWidth="325.0"
              spacing="40.0">
            <children>
                <GridPane gridLinesVisible="true" prefHeight="159.0"
                          prefWidth="206.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                           prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                           prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="-Infinity" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="1.7976931348623157E308"
                                        minHeight="-Infinity" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="-Infinity" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Name">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <Label text="ID" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="studentNameField"
                                   GridPane.columnIndex="1"/>
                        <Label text="Status" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="studentIDField" editable="false"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                        <CheckBox fx:id="studentMemberCheckBox"
                                  alignment="CENTER" contentDisplay="CENTER"
                                  maxWidth="1.7976931348623157E308"
                                  mnemonicParsing="false" text="Member"
                                  GridPane.columnIndex="1"
                                  GridPane.rowIndex="2"/>
                    </children>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </GridPane>
                <Button fx:id="studentConfirmButton" alignment="CENTER"
                        maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" text="Confirm changes"/>
            </children>
        </VBox>
    </children>
</HBox>
