<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0"
      prefWidth="500.0" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" prefHeight="206.0" prefWidth="325.0"
              spacing="40.0">
            <children>
                <GridPane gridLinesVisible="true" prefHeight="159.0"
                          prefWidth="206.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                           prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                           prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="-Infinity" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="1.7976931348623157E308"
                                        minHeight="-Infinity" prefHeight="100.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="-Infinity" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="-Infinity" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="-Infinity" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="-Infinity" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Title">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <Label text="Description" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <Label text="model.Genre" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="gameTitleField"
                                   GridPane.columnIndex="1"/>
                        <TextArea fx:id="gameDescriptionArea" prefHeight="200.0"
                                  prefWidth="200.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1"/>
                        <ChoiceBox fx:id="gameGenreChoiceBox"
                                   maxWidth="1.7976931348623157E308"
                                   prefWidth="150.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                        <Label text="Owner ID" GridPane.rowIndex="4">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="ownerIDField" GridPane.columnIndex="1"
                                   GridPane.rowIndex="4"/>
                        <Label text="Status" GridPane.rowIndex="3">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="gameOwnerIDField"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="4"/>
                        <TextField fx:id="gameStatusField" editable="false"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="3"/>
                        <Label text="Rating" GridPane.rowIndex="5">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="gameRatingField" editable="false"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="5"/>
                    </children>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </GridPane>
                <Button fx:id="gameConfirmButton" alignment="CENTER"
                        maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" text="Confirm changes"/>
            </children>
        </VBox>
    </children>
</HBox>
